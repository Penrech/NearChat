<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.UserProfileEditAccess"
        android:id="@+id/rootEditAccessLayout">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="58dp"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            app:elevation="0dp"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:id="@+id/editAccessAppBar">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/EditAccessToolbar"
                app:contentInsetStartWithNavigation="0dp"
                android:elevation="0dp"
                android:padding="0dp"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                android:layout_margin="0dp"
                app:layout_collapseMode="pin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_toolbar_height"
                android:background="@android:color/background_light"
                android:minHeight="58dp"
                android:fitsSystemWindows="false">

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:id="@+id/LinerLayoutEditAccessToolbar"
                    android:gravity="center_vertical|end"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp">

                <ImageButton
                        android:layout_weight="0"
                        android:layout_width="@dimen/custom_toolbar_item_height"
                        android:layout_height="@dimen/custom_toolbar_item_height"
                        app:srcCompat="@drawable/icon_close_white"
                        android:id="@+id/editAccessCloseButton"
                        android:scaleType="centerInside"
                        android:background="@drawable/bottom_item_ripple_checked"
                        android:padding="10dp"
                        android:elevation="0dp"
                        android:contentDescription="edit user access close button"
                        android:layout_marginEnd="12dp"/>
                <TextView
                        android:maxLines="2"
                        app:autoSizeTextType="uniform"
                        app:autoSizeStepGranularity="2sp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:id="@+id/toolbarEditAccessTitle"
                        android:layout_marginEnd="12dp"
                        android:fontFamily="@font/roboto_medium"
                        android:visibility="visible"
                        android:textColor="@color/brokenBlack"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:text="Editar Acceso"/>

                <ImageButton
                        android:layout_width="@dimen/custom_toolbar_item_height"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/icon_done_white"
                        android:id="@+id/saveChangesEditAccessToolbarButton"
                        android:scaleType="centerInside"
                        android:layout_weight="0"
                        android:background="@drawable/bottom_item_ripple_checked"
                        android:padding="10dp"
                        android:elevation="0dp"
                        android:contentDescription="save changes edit access toolbar button"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/defaultLightBlue"
            android:id="@+id/EditAccessScrollView" android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/EditAccessContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Cambiar email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editAccessChangeEmailLabel"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="@+id/editAccessEmailEditText"
                    app:layout_constraintEnd_toEndOf="@+id/editAccessEmailEditText"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:textColor="@android:color/background_light"
                    android:layout_marginStart="20dp"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:inputType="textEmailAddress"
                    android:ems="0"
                    android:id="@+id/editAccessEmailEditText"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/editAccessChangeEmailLabel"
                    style="@style/Widget.AppCompat.AutoCompleteTextView"
                    android:background="@drawable/text_field_background"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintEnd_toStartOf="@+id/editAccessValidEmail"
                    android:fontFamily="@font/roboto"
                    android:textSize="16sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:singleLine="true"
                    android:hint="Email"/>

            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/icon_done_white"
                    android:id="@+id/editAccessValidEmail"
                    android:padding="10dp"
                    android:background="@drawable/rounded_button_background_unchecked"
                    android:backgroundTint="@color/defaultGreen"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/editAccessEmailEditText"
                    app:layout_constraintBottom_toBottomOf="@+id/editAccessEmailEditText"/>
            <TextView
                    android:text="Cambiar Contraseña"
                    android:layout_width="315dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editAccessNewPasswordLabel"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:textColor="@android:color/background_light"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/editAccessEmailEditText"
                    app:layout_constraintEnd_toEndOf="@+id/editAccessNewPasswordEditText"
                    app:layout_constraintStart_toStartOf="@+id/editAccessNewPasswordEditText"
                    android:layout_marginStart="20dp"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:inputType="textPassword"
                    android:ems="0"
                    android:id="@+id/editAccessNewPasswordEditText"
                    style="@style/Widget.AppCompat.AutoCompleteTextView"
                    android:background="@drawable/text_field_background"
                    android:fontFamily="@font/roboto"
                    android:textSize="16sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:singleLine="true"
                    android:hint="Nueva contraseña"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/editAccessNewPasswordLabel"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/editAccessViewPasswordButton"
                    android:layout_marginEnd="12dp"/>

            <ImageButton
                    android:layout_width="@dimen/custom_toolbar_item_height"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/icon_visibility_white"
                    android:id="@+id/editAccessViewPasswordButton"
                    android:scaleType="centerInside"
                    android:layout_weight="0"
                    android:background="@drawable/bottom_item_ripple_checked"
                    android:padding="10dp"
                    android:elevation="0dp"
                    android:contentDescription="view password button"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintTop_toTopOf="@+id/editAccessNewPasswordEditText"
                    app:layout_constraintBottom_toBottomOf="@+id/editAccessNewPasswordEditText"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:inputType="textPassword"
                    android:ems="0"
                    android:id="@+id/editAccessOldPasswordEditText"
                    style="@style/Widget.AppCompat.AutoCompleteTextView"
                    android:background="@drawable/text_field_background"
                    android:fontFamily="@font/roboto"
                    android:textSize="16sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:singleLine="true"
                    android:hint="Contraseña actual"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/editAccessActualPasswordLabel"
                    app:layout_constraintEnd_toStartOf="@+id/editAccessViewActualPasswordButton"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toStartOf="parent"/>

            <ImageButton
                    android:layout_width="@dimen/custom_toolbar_item_height"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/icon_visibility_white"
                    android:id="@+id/editAccessViewActualPasswordButton"
                    android:scaleType="centerInside"
                    android:layout_weight="0"
                    android:background="@drawable/bottom_item_ripple_checked"
                    android:padding="10dp"
                    android:elevation="0dp"
                    android:contentDescription="view password button"
                    app:layout_constraintTop_toTopOf="@+id/editAccessOldPasswordEditText"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/editAccessOldPasswordEditText"/>

            <TextView
                    android:text="Validar con contraseña"
                    android:layout_width="315dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editAccessActualPasswordLabel"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:textColor="@android:color/background_light"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/editAccessNewPasswordEditText"
                    app:layout_constraintStart_toStartOf="@+id/editAccessOldPasswordEditText"
                    app:layout_constraintEnd_toEndOf="@+id/editAccessOldPasswordEditText"
                    android:layout_marginStart="20dp"/>

            <TextView
                    app:autoSizeTextType="uniform"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeMaxTextSize="16sp"
                    android:text="Es necesario introducir la contraseña actual para guardar cualquier cambio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editAccessHelper"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/defaultWhite"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/editAccessOldPasswordEditText"
                    app:layout_constraintStart_toStartOf="@+id/editAccessOldPasswordEditText"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/editAccessOldPasswordEditText"
                    android:layout_marginEnd="12dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>