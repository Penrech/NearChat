<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.EditEventActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:fitsSystemWindows="true"
            app:elevation="0dp"
            android:padding="0dp"
            android:layout_margin="0dp">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/editEventToolbar"
                app:contentInsetStartWithNavigation="0dp"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_toolbar_height"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:minHeight="@dimen/custom_toolbar_height">

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:id="@+id/LinerLayoutEditEventToolbar"
                    android:gravity="center_vertical|end"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp">

                <ImageButton
                        android:layout_marginEnd="12dp"
                        android:layout_weight="0"
                        android:layout_width="@dimen/custom_toolbar_item_height"
                        android:layout_height="@dimen/custom_toolbar_item_height"
                        app:srcCompat="@drawable/icon_close_white"
                        android:id="@+id/closeEditEventButton"
                        android:scaleType="centerInside"
                        android:background="@drawable/bottom_item_ripple_checked"
                        android:padding="10dp"
                        android:elevation="0dp"
                        android:contentDescription="close edit event window"
                        tools:visibility="visible"/>
                <TextView
                        android:maxLines="2"
                        app:autoSizeTextType="uniform"
                        app:autoSizeStepGranularity="2sp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:id="@+id/toolbarEditEventTitle"
                        android:layout_marginEnd="12dp"
                        android:fontFamily="@font/roboto_medium"
                        android:visibility="visible"
                        android:textColor="@color/brokenBlack"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:text="Editar Evento"/>

                <ImageButton
                        android:layout_marginEnd="12dp"
                        android:layout_weight="0"
                        android:layout_width="@dimen/custom_toolbar_item_height"
                        android:layout_height="@dimen/custom_toolbar_item_height"
                        app:srcCompat="@drawable/icon_position_white"
                        android:id="@+id/showMyPositionButton"
                        android:scaleType="centerInside"
                        android:background="@drawable/bottom_item_ripple_checked"
                        android:padding="10dp"
                        android:elevation="2dp"
                        android:contentDescription="show my position button"
                        tools:visibility="gone"/>
                <ImageButton
                        android:layout_marginEnd="0dp"
                        android:layout_weight="0"
                        android:layout_width="@dimen/custom_toolbar_item_height"
                        android:layout_height="@dimen/custom_toolbar_item_height"
                        app:srcCompat="@drawable/icon_done_white"
                        android:id="@+id/saveEditEventChangesButton"
                        android:scaleType="centerInside"
                        android:background="@drawable/bottom_item_ripple_checked"
                        android:padding="10dp"
                        android:elevation="0dp"
                        android:contentDescription="save edit event changes button"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/changeBetweenEditEventFragments"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>