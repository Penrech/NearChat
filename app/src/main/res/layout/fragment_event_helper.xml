<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.EventHelperFragment"
        android:id="@+id/eventHelperRootContainer"
        android:background="@color/defaultLightBlue">

    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline5"
            app:layout_constraintGuide_percent="0.5"/>

    <com.enrech.nearchat.CustomElements.CustomToolbarButton
            app:should_change_color="true"
            app:secundary_drawable="@drawable/icon_position_pin_white"
            android:layout_weight="0"
            android:layout_width="@dimen/custom_toolbar_item_height"
            android:layout_height="@dimen/custom_toolbar_item_height"
            app:srcCompat="@drawable/icon_close_white"
            android:id="@+id/eventHelperCloseButton"
            android:scaleType="centerInside"
            android:background="@drawable/bottom_home_background"
            android:padding="10dp"
            android:contentDescription="close button"
            android:backgroundTint="@color/defaultBlue"
            app:icon_initial_tint_color="@color/defaultWhite"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"/>

    <ImageView
            android:src="@drawable/icon_event_helper_normal"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/eventHelperImageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"/>

    <TextView
            android:text="@string/no_event_description"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:id="@+id/eventHelperDescription"
            app:layout_constraintTop_toTopOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="22sp"
            app:autoSizeStepGranularity="1sp"
            android:fontFamily="@font/roboto"
            android:textAlignment="center"
            android:textColor="@color/brokenBlack"
            android:gravity="center_vertical"/>

    <Button
            android:text="@string/no_event_button_label"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeTextType="uniform"
            app:autoSizeStepGranularity="2sp"
            android:maxLines="1"
            android:textAllCaps="false"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/eventHelperActionButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            android:background="@drawable/button_rectangular_background_ripple"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:fontFamily="@font/roboto_medium"
            android:textSize="18sp"
            android:textColor="@color/defaultWhite"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/eventHelperDescription"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="12dp"
            app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>