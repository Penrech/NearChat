<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".fragments.AddEditEventFragment"
        android:id="@+id/rootAddEditEventLayout">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:fitsSystemWindows="true"
            app:elevation="0dp"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:id="@+id/AddEditEventAppBar">


        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/editEventPictureCollapsingToolbar"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentInsetStartWithNavigation="0dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:fitsSystemWindows="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="192dp"
                    android:background="@android:color/background_light"
                    android:layout_marginTop="@dimen/design_bottom_navigation_height">

                <TextView
                        android:maxLines="1"
                        app:autoSizeTextType="uniform"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeMaxTextSize="20sp"
                        android:text="Cambiar foto"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:id="@+id/changePhotoButton"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/cardView"
                        android:layout_marginBottom="18dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="12dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/defaultBlue"
                        android:textAlignment="gravity"
                        app:layout_constraintVertical_bias="0.0"
                        android:gravity="center_horizontal|top"/>

                <androidx.cardview.widget.CardView
                        android:layout_width="115dp"
                        android:layout_height="115dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="18dp"
                        android:layout_marginStart="12dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="11.5dp"
                        app:cardBackgroundColor="@color/random2"
                        android:id="@+id/cardView"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                            android:maxLines="1"
                            app:autoSizeTextType="uniform"
                            app:autoSizeStepGranularity="2sp"
                            app:autoSizeMaxTextSize="21sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/icon_event"
                            android:id="@+id/eventImage"/>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/EditProfileToolbar"
                    app:contentInsetStartWithNavigation="0dp"
                    android:elevation="0dp"
                    android:padding="0dp"
                    app:contentInsetEnd="0dp"
                    app:contentInsetLeft="0dp"
                    app:contentInsetRight="0dp"
                    app:contentInsetStart="0dp"
                    android:layout_margin="0dp"
                    app:layout_collapseMode="pin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/custom_toolbar_height"
                    android:background="@android:color/background_light"
                    android:minHeight="58dp"
                    android:fitsSystemWindows="true">

                <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:id="@+id/LinerLayoutEditEventToolbar"
                        android:gravity="center_vertical|end"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp">

                    <ImageButton
                            android:layout_weight="0"
                            android:layout_width="@dimen/custom_toolbar_item_height"
                            android:layout_height="@dimen/custom_toolbar_item_height"
                            app:srcCompat="@drawable/icon_close_white"
                            android:id="@+id/editEventCloseButton"
                            android:scaleType="centerInside"
                            android:background="@drawable/bottom_item_ripple_checked"
                            android:padding="10dp"
                            android:elevation="0dp"
                            android:contentDescription="edit user profile close button"
                            android:layout_marginEnd="12dp"/>
                    <TextView
                            android:maxLines="2"
                            app:autoSizeTextType="uniform"
                            app:autoSizeStepGranularity="2sp"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:id="@+id/toolbarEditEventTitle"
                            android:layout_marginEnd="12dp"
                            android:fontFamily="@font/roboto_medium"
                            android:visibility="visible"
                            android:textColor="@color/brokenBlack"
                            android:textAlignment="center"
                            android:gravity="center_vertical"
                            android:text="Editar Evento"/>

                    <ImageButton
                            android:layout_width="@dimen/custom_toolbar_item_height"
                            android:layout_height="40dp"
                            app:srcCompat="@drawable/icon_done_white"
                            android:id="@+id/saveChangesEditEventToolbarButton"
                            android:scaleType="centerInside"
                            android:layout_weight="0"
                            android:background="@drawable/bottom_item_ripple_checked"
                            android:padding="10dp"
                            android:elevation="0dp"
                            android:contentDescription="save changes edit profile toolbar button"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:background="@color/defaultLightBlue"
            android:id="@+id/AddEditEventScrollView">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/AddEditEventContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Nombre del Evento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editEventTitleLabel"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="@+id/editProfileUsernameEditText"
                    app:layout_constraintEnd_toEndOf="@+id/editProfileUsernameEditText"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:textColor="@android:color/background_light"
                    android:layout_marginStart="20dp"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:ems="0"
                    android:id="@+id/editProfileUsernameEditText"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/editEventTitleLabel"
                    style="@style/Widget.AppCompat.AutoCompleteTextView"
                    android:background="@drawable/text_field_background"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/roboto"
                    android:textSize="16sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:singleLine="true"
                    android:hint="Nombre del evento"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                    android:text="Fecha de finalización"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editEventEndDateLabel"
                    app:layout_constraintStart_toStartOf="@+id/editProfileUsernameEditText"
                    app:layout_constraintEnd_toEndOf="@+id/editProfileUsernameEditText"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:textColor="@android:color/background_light"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/editProfileUsernameEditText"
                    android:layout_marginStart="20dp"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:ems="0"
                    android:id="@+id/editProfileUserNameSurnameEdiText"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="12dp"
                    style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                    android:background="@drawable/text_field_background"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/roboto"
                    android:textSize="16sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/editEventEndDateLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:singleLine="true"/>

            <TextView
                    android:text="Rango del evento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editEventRangeLabel"
                    app:layout_constraintStart_toStartOf="@+id/editProfileUsernameEditText"
                    app:layout_constraintEnd_toEndOf="@+id/editProfileUsernameEditText"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:textColor="@android:color/background_light"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/editProfileUserNameSurnameEdiText"
                    android:layout_marginTop="20dp"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:ems="0"
                    android:id="@+id/editEventRangeEditText"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="12dp"
                    style="@style/Widget.AppCompat.AutoCompleteTextView"
                    android:background="@drawable/text_field_background"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/roboto"
                    android:textSize="16sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/editEventRangeLabel"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:gravity="bottom"
                    android:paddingBottom="10dp"
                    android:hint="50"
                    app:layout_constraintEnd_toStartOf="@+id/editEventMeassureChangeButton"/>
            <Button
                    android:textAllCaps="false"
                    android:text="M"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/editEventMeassureChangeButton"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/rounded_button_background_unchecked"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintTop_toTopOf="@+id/editEventRangeEditText"
                    app:layout_constraintBottom_toBottomOf="@+id/editEventRangeEditText"
                    android:fontFamily="@font/roboto_bold"/>
            <TextView
                    app:autoSizeTextType="uniform"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeMaxTextSize="15sp"
                    android:text="Mínimo 10 metros, máximo 1000 metros"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editEventHelperRangeLabel"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/defaultWhite"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="@+id/editEventRangeEditText"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/editEventRangeEditText"
                    android:textSize="15sp"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                    android:text="Localización"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editLocationLabel"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:textColor="@android:color/background_light"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/editEventHelperRangeLabel"
                    app:layout_constraintStart_toStartOf="@+id/editEventLocationCardView"
                    app:layout_constraintEnd_toEndOf="@+id/editEventLocationCardView"
                    android:layout_marginStart="20dp"/>

            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/editLocationLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/blueLightGray"
                    android:id="@+id/editEventLocationCardView"/>

            <TextView
                    android:text="Aforo máximo virtual"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editCapacityLabel"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:textColor="@android:color/background_light"
                    app:layout_constraintStart_toStartOf="@+id/editEventCapacityEditText"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/editEventLocationCardView" android:layout_marginEnd="12dp"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:ems="0"
                    android:id="@+id/editEventCapacityEditText"
                    style="@style/Widget.AppCompat.AutoCompleteTextView"
                    android:background="@drawable/custom_text_field_selectable"
                    android:fontFamily="@font/roboto"
                    android:textSize="16sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:singleLine="true"
                    android:gravity="bottom"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/editCapacityLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintEnd_toStartOf="@+id/editEventEnableCapacityLimit"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="145dp"/>

            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editEventEnableCapacityLimit"
                    android:button="@drawable/custom_radio_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintTop_toTopOf="@+id/editEventCapacityEditText"
                    app:layout_constraintBottom_toBottomOf="@+id/editEventCapacityEditText"
                    android:checked="false"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>