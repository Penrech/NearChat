<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="76dp">

    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardElevation="0dp"
            app:cardCornerRadius="7.6dp"
            app:cardBackgroundColor="@color/defaultWhite">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icon_event"
                    android:id="@+id/imageView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@color/defaultBlue"/>

            <TextView
                    android:text="Verbena PeÃ±era 2019 "
                    app:autoSizeTextType="uniform"
                    app:autoSizeStepGranularity="1sp"
                    android:layout_width="0dp"
                    android:maxLines="2"
                    app:autoSizeMaxTextSize="21sp"
                    android:layout_height="30dp"
                    android:id="@+id/fragmentNotchEventTitleTextView"
                    android:textColor="@color/brokenBlack"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    android:layout_marginStart="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>