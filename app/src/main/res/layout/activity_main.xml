<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <androidx.viewpager.widget.ViewPager
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/nav_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/homeFragmentsPager"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/nav_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/defaultLightBlue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:menu="@menu/bottom_nav_menu"
                app:labelVisibilityMode="unlabeled"
                app:itemIconTint="@drawable/bottom_item_switchable_tint"
                app:itemTextColor="@drawable/bottom_item_switchable_tint"
                android:elevation="0dp"
                app:itemBackground="@android:color/transparent"
                app:itemIconSize="40dp"
                app:elevation="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:fitsSystemWindows="true"
            app:elevation="0dp"
            android:padding="0dp"
            android:layout_margin="0dp">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/homeToolbar"
                app:contentInsetStartWithNavigation="0dp"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_toolbar_height"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:minHeight="@dimen/custom_toolbar_height">

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:id="@+id/LinerLayoutHomeToolbar"
                    android:gravity="center_vertical|end"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp">

                <TextView
                        android:text="Eventos Cercanos"
                        android:maxLines="2"
                        app:autoSizeTextType="uniform"
                        app:autoSizeStepGranularity="2sp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/custom_toolbar_item_height"
                        android:id="@+id/toolbarHomeTitle"
                        android:layout_marginEnd="12dp"
                        android:fontFamily="@font/roboto_bold"
                        android:visibility="visible"
                        android:textColor="@color/brokenBlack" android:alpha="0"/>

                <ImageButton
                        android:layout_marginEnd="12dp"
                        android:layout_weight="0"
                        android:layout_width="@dimen/custom_toolbar_item_height"
                        android:layout_height="@dimen/custom_toolbar_item_height"
                        app:srcCompat="@drawable/icon_event_no_range_white"
                        android:id="@+id/showEventAreaButton"
                        android:scaleType="centerInside"
                        android:background="@drawable/bottom_home_background"
                        android:padding="10dp"
                        android:elevation="2dp"
                        android:contentDescription="show event area button"/>

                <ImageButton
                        android:layout_marginEnd="12dp"
                        android:layout_weight="0"
                        android:layout_width="@dimen/custom_toolbar_item_height"
                        android:layout_height="@dimen/custom_toolbar_item_height"
                        app:srcCompat="@drawable/icon_position_white"
                        android:id="@+id/showMyPositionButton"
                        android:scaleType="centerInside"
                        android:background="@drawable/bottom_home_background"
                        android:padding="10dp"
                        android:elevation="2dp"
                        android:contentDescription="show my position button"/>

                <ImageButton
                        android:layout_marginEnd="0dp"
                        android:layout_weight="0"
                        android:layout_width="@dimen/custom_toolbar_item_height"
                        android:layout_height="@dimen/custom_toolbar_item_height"
                        app:srcCompat="@drawable/icon_list_white"
                        android:id="@+id/changeBetweenMapAndListButton"
                        android:scaleType="centerInside"
                        android:background="@drawable/bottom_home_background"
                        android:padding="10dp" android:elevation="2dp"
                        android:contentDescription="change between map and list button"
                        android:onClick="changeBetweenPages"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>