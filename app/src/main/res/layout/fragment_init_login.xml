<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.InitLoginFragment"
        android:background="@color/defaultLightBlue">

    <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="0"
            android:id="@+id/loginEmailEditText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:elevation="0dp"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:background="@drawable/text_field_background"
            android:fontFamily="@font/roboto"
            android:textSize="16sp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:singleLine="true"
            android:hint="Email "
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:drawableTint="@color/defaultBlue"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="24dp"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/icon_email_small"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="0"
            android:id="@+id/loginPasswordEditText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:elevation="0dp"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:background="@drawable/text_field_background"
            android:fontFamily="@font/roboto"
            android:textSize="16sp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:singleLine="true"
            android:hint="Contraseña "
            android:drawablePadding="12dp"
            android:drawableLeft="@drawable/icon_lock_small"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:drawableTint="@color/defaultBlue"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/loginEmailEditText"/>

    <Button
            android:text="Login"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeTextType="uniform"
            app:autoSizeStepGranularity="2sp"
            android:maxLines="1"
            android:textAllCaps="false"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:id="@+id/loginButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            android:background="@drawable/button_rectangular_background_ripple"
            android:elevation="0dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:fontFamily="@font/roboto_medium"
            android:textSize="18dp"
            android:textColor="@color/defaultWhite"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/loginPasswordEditText"/>

    <TextView
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeTextType="uniform"
            app:autoSizeStepGranularity="2sp"
            android:maxLines="1"
            android:text="¿No tienes cuenta? Regístrate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/loginGoToRegisterButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            android:textAlignment="center"
            android:fontFamily="@font/roboto"
            android:textColor="@color/defaultDarkBlue"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/loginButton"
            app:layout_constraintVertical_bias="1.0"/>

    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline2"
            app:layout_constraintGuide_percent="0.5"/>

    <ImageView
            app:srcCompat="@drawable/logo_logo_white"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/loginLogoImageView"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
            android:visibility="gone"
            android:theme="@style/AppTheme.WhiteAccent"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginLoadindProgressBar"
            app:layout_constraintEnd_toEndOf="@+id/loginButton"
            app:layout_constraintStart_toStartOf="@+id/loginButton"
            app:layout_constraintTop_toTopOf="@+id/loginButton"
            app:layout_constraintBottom_toBottomOf="@+id/loginButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>