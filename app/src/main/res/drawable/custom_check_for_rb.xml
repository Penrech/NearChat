<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="@android:color/background_light" />

            <size
                android:height="40dp"
              android:width="40dp"/>
        </shape>
    </item>
    <item android:top="8dp"
          android:left="8dp"
          android:right="8dp"
          android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="@color/defaultDarkBlue" />
        </shape>
    </item>

</layer-list>